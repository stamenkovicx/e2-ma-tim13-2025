<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.ui.SpecialMissionActivity">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/missionLayoutGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tvMissionTitle,tvTimeRemaining,bossImage,tvBossHp,progressBossHp,tvPersonalProgressTitle,tvPersonalDamage,tvMembersProgressTitle,membersProgressRecyclerView"
        />

    <TextView
        android:id="@+id/tvMissionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specijalna Misija"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTimeRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tvMissionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Preostalo vreme: 13 dana 21:45:12" />

    <ImageView
        android:id="@+id/bossImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/tvTimeRemaining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvBossHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/bossImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Boss HP: 450 / 500" />

    <ProgressBar
        android:id="@+id/progressBossHp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:indeterminate="false"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvBossHp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:progress="80" />


    <TextView
        android:id="@+id/tvMembersProgressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Napredak članova saveza:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/progressBossHp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/membersProgressRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMembersProgressTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_mission_progress" />

    <ImageView
        android:id="@+id/chestImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="16dp" tools:src="@drawable/cup1" />

    <TextView
        android:id="@+id/tvRewardCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/chestImage" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" tools:text="+120 coins" />

    <LinearLayout
        android:id="@+id/layoutRewardItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tvRewardCoins" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"> <ImageView
        android:id="@+id/ivRewardPotion"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        tools:src="@drawable/potion_power_minor"/>
        <ImageView
            android:id="@+id/ivRewardClothing"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            tools:src="@drawable/clothing_boots"/>
        <ImageView
            android:id="@+id/ivRewardBadge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            tools:src="@drawable/badge_first_mission"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>