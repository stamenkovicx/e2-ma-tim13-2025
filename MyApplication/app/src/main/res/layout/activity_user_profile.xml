<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/user_avatar_description"
            android:background="@drawable/selected_avatar_border"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textViewProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            tools:text="Username (Title)"/>

        <Button
            android:id="@+id/buttonAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_friend_button"
            tools:visibility="visible"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvProfileStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_stats"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/profile_level" android:textSize="16sp"/>
            <TextView android:id="@+id/textViewProfileLevel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:textSize="16sp" android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="@string/profile_xp" android:textSize="16sp"/>
            <TextView android:id="@+id/textViewProfileXp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textSize="16sp" android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"/>

        <TextView
            android:id="@+id/textViewBadgesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_badges"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color_primary"/>

        <LinearLayout
            android:id="@+id/llBadgesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewEquipmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_equipment"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_color_primary"/>

        <LinearLayout
            android:id="@+id/llEquipmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="8dp"/>


        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/qr_placeholder"
            android:contentDescription="@string/profile_qr_code" />

    </LinearLayout>
</ScrollView>